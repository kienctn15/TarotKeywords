<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/colorFire">
    <ScrollView android:layout_height="wrap_content"
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorFire"
            android:padding="13sp"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ten of Wands"
                android:textAlignment="center"
                android:textStyle="bold"
                android:paddingBottom="11sp"
                android:textColor="@color/colorAir"
                android:textSize="29sp"/>
            <TextView
                android:layout_gravity="center_vertical|right"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:textColor="@color/colorAir"
                android:text="@string/tnow"
                android:paddingLeft="11sp"
                android:textSize="16sp"/>
        </LinearLayout></ScrollView></LinearLayout>